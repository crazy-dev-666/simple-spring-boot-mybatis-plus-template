<?xml version="1.0" encoding="UTF-8"?>
<configuration scanPeriod="30 seconds">

    <property name="LOG_HOME" value="${sys:user.dir:-.}/logs"/>
    <Property name="LOG_BACK_HOME" value="${sys:user.dir:-.}/logs/backup"/>
    <Property name="DEFAULT_CHARSET" value="UTF-8"/>
    <Property name="ERROR_FILE_NAME" value="error"/>
    <Property name="INFO_FILE_NAME" value="info"/>
    <Property name="LOG_PATTERN_LAYOUT" value="%d{HH:mm:ss,SSS} %highlight([%-5.5level]) [%-5.5thread] %yellow([%-6.6X{name}]) %cyan([%-40.40class:%-4.4line]) - %msg%xEx%n"/>

    <!--输出到控制台-->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN_LAYOUT}</pattern>
        </encoder>
    </appender>

    <!-- 配置日常日志-->
    <appender name="info" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--日志文件路径，日志文件名称-->
        <File>${LOG_HOME}/${INFO_FILE_NAME}.log</File>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern> ${LOG_BACK_HOME}/${INFO_FILE_NAME}-%d{yyyy-MM-dd}.log.gz</FileNamePattern>
            <!-- 配置日志的滚动时间 ，表示只保留最近 30 天的日志-->
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>

        <!-- 输出的日志内容格式化-->
        <encoder>
            <pattern>${LOG_PATTERN_LAYOUT}</pattern>
        </encoder>
    </appender>

    <!-- 配置错误日志-->
    <appender name="error" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--级别大于等于WARN的日志可以写入-->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <OnMismatch>DENY</OnMismatch>
            <OnMatch>ACCEPT</OnMatch>
        </filter>
        <!--日志文件路径，日志文件名称-->
        <File>${LOG_HOME}/${ERROR_FILE_NAME}.log</File>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern> ${LOG_BACK_HOME}/${ERROR_FILE_NAME}-%d{yyyy-MM-dd}.log.gz</FileNamePattern>
            <!-- 配置日志的滚动时间 ，表示只保留最近 30 天的日志-->
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>

        <!-- 输出的日志内容格式化-->
        <encoder>
            <pattern>${LOG_PATTERN_LAYOUT}</pattern>
        </encoder>
    </appender>


    <logger name="cn.dev666" level="debug"/>

    <!-- 本地环境 -->
    <springProfile name="local">
        <root level="INFO">
            <appender-ref ref="Console" />
        </root>
    </springProfile>
    <!-- 非本地环境 -->
    <springProfile name="!local">
        <root level="INFO">
            <appender-ref ref="info" />
            <appender-ref ref="error" />
        </root>
    </springProfile>
</configuration>